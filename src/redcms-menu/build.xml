<?xml version="1.0" encoding="UTF-8"?>
<project name="YUI" default="local">
    <description>DOM - Build All Modules</description>

    <macrodef name="build-menu">
        <attribute name="target"/>
        <sequential>
            <subant target="@{target}">
                <fileset dir="." includes="build.*.xml"/>
            </subant>
        </sequential>
    </macrodef>

    <target name="local">
        <build-menu target="local"/>
    </target>
    <target name="deploy">
        <build-menu target="deploy"/>
    </target>
    <target name="all">
        <build-menu target="all"/>
    </target>
    <target name="clean">
        <build-menu target="clean"/>
    </target>

</project>
